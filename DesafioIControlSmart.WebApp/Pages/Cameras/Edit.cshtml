@page
@model DesafioIControlSmart.WebApp.Pages.Cameras.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Camera</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Camera.IsSensorOn" /> @Html.DisplayNameFor(model => model.Camera.IsSensorOn)
                </label>
            </div>
            <input type="hidden" asp-for="Camera.Id" />
            <div class="form-group">
                <label asp-for="Camera.IP" class="control-label"></label>
                <input asp-for="Camera.IP" class="form-control" />
                <span asp-validation-for="Camera.IP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Camera.MAC" class="control-label"></label>
                <input asp-for="Camera.MAC" class="form-control" />
                <span asp-validation-for="Camera.MAC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Camera.Status" class="control-label"></label>
                <select asp-for="Camera.Status" asp-items="Html.GetEnumSelectList<DesafioIControlSmart.Data.DeviceStatus>()" class="form-control"></select>
                <span asp-validation-for="Camera.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
