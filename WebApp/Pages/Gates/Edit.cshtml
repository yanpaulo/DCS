@page
@model DesafioControlSmart.WebApp.Pages.Gates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Gate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gate.State" class="control-label"></label>
                <select asp-for="Gate.State" asp-items="Html.GetEnumSelectList<DesafioControlSmart.Data.GateState>()" class="form-control"></select>
                <span asp-validation-for="Gate.State" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Gate.Id" />
            <div class="form-group">
                <label asp-for="Gate.IP" class="control-label"></label>
                <input asp-for="Gate.IP" class="form-control" />
                <span asp-validation-for="Gate.IP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gate.MAC" class="control-label"></label>
                <input asp-for="Gate.MAC" class="form-control" />
                <span asp-validation-for="Gate.MAC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gate.Status" class="control-label"></label>
                <select asp-for="Gate.Status" asp-items="Html.GetEnumSelectList<DesafioControlSmart.Data.DeviceStatus>()" class="form-control"></select>
                <span asp-validation-for="Gate.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
